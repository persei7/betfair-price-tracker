{
  "manifest_version": 3,
  "name": "Betting Price Tracker",
  "version": "1.0",
  "description": "Shows best back and lay prices for each runner on Betfair Exchange",
  "permissions": ["activeTab", "scripting", "storage", "webNavigation", "tabs", "notifications"],
  "host_permissions": ["https://www.betfair.com.au/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.betfair.com.au/exchange/plus/horse-racing/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}