{
  "manifest_version": 3,
  "name": "Tab.com.au Location with Betfair Odds",
  "version": "1.0",
  "description": "Detects your current location on tab.com.au and adds Betfair odds comparison",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "*://*.tab.com.au/*",
    "*://*.betfair.com.au/*",
    "*://*.betfair.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Tab.com.au Location & Betfair Odds"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tab.com.au/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
      {
        "resources": ["credentials.json"],
        "matches": ["<all_urls>"]
      }
    ]
}