{
  "manifest_version": 3,
  "name": "Tab Racing Odds Overlay",
  "version": "1.0",
  "description": "Displays alternative odds on tab racing pages",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.tabracingsite.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.tabracingsite.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}